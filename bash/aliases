alias ls="ls -hl --color=auto"
alias lsa="ls -hlA --color=auto"

alias g="git"
alias gl="g log --oneline"
alias glc="g log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'"
alias glg="g log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'"
alias gs="g status"
alias gd="g diff"
alias gds="g diff --staged"
alias gck="g checkout"
alias gckm="g checkout main"
alias gaa="g add -A"
alias gc="g commit"
alias gcm="g commit -m"
alias gca="g commit --amend"
alias gcaa="g commit --all"
alias gcme="g commit --allow-empty"
alias gb="g branch"
alias gba="g branch -a"
alias gbm="g branch -m"
alias gbd="g branch -D"
alias grb="g rebase"
alias grbm="g rebase main"
alias grbi="g rebase -i"
alias grba="g rebase --abort"
alias grbc="g rebase --continue"
alias grbs="g rebase --skip"
alias gcl="g clone"
alias gr="g restore"
alias grs="g restore --staged"
alias grr="g reset"
alias gpl="g pull"
alias gps="g push"
alias gcp="g cherry-pick"
alias gcpa="g cherry-pick --abort"
alias gst="g stash"
alias gsta="g stash apply"
alias gstd="g stash drop"
alias gstl="g stash list"
alias gstad="g stash list apply && g stash drop"

alias d="docker"
alias c="docker-compose"

alias t="tmux"
alias tn="tmux new -s"
alias tm="tmux new -s main"
alias ta="tmux attach -t"
alias tls="tmux list-session"
alias tk="tmux kill-session -t"
alias tx="tmuxinator"
alias txs="tmuxinator start"
alias txstp="tmuxinator stop"
alias txe="tmuxinator edit"

alias v="vim"
alias vi="vim"
alias vmi="vim"
