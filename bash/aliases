alias ls="ls -hl --color=auto"
alias lsa="ls -hlA --color=auto"

alias g="git"
alias gl="g log --oneline"
alias glc="g log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'"
alias glg="g log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'"
alias gs="g status"
alias gd="g diff"
alias gds="g diff --staged"
alias gck="g checkout"
alias gaa="g add -A"
alias gc="g commit"
alias gcm="g commit -m"
alias gca="g commit --amend"
alias gcaa="g commit --all"
alias gb="g branch"
alias gba="g branch -a"
alias gbm="g branch -m"
alias gri="g rebase -i"
alias gra="g rebase --abort"
alias grc="g rebase --continue"
alias gcl="g clone"
alias gr="g reset"
alias grs="g reset --soft"
alias grh="g reset --hard"
alias gpl="g pull"
alias gps="g push"

alias d="docker"
alias c="docker-compose"

