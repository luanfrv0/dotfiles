alias ls="ls -hl --color=auto"
alias lsa="ls -hlA --color=auto"

alias g="git"
alias gl="g log --oneline"
alias gs="g status"
alias gd="g diff"
alias gds="g diff --staged"
alias gck="g checkout"
alias gaa="g add -A"
alias gc="g commit"
alias gcm="g commit -m"
alias gca="g commit --amend"
alias gcaa="g commit --all"
alias gb="g branch"
alias gba="g branch -a"
alias gbm="g branch -m"
alias gri="g rebase -i"
alias gra="g rebase --abort"
alias grc="g rebase --continue"

alias d="docker"
alias c="docker-compose"

